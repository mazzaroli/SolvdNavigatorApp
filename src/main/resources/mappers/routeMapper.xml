<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.database.dao.IRouteDAO.java">

    <!-- Mapeo del resultado a la clase Route -->
    <resultMap id="RouteResultMap" type="com.solvd.database.model.Route">
        <id property="id" column="id"/>
        <result property="busId" column="id_bus"/>
        <result property="routeOrder" column="route_order"/>
        <result property="stationId" column="id_station"/>
    </resultMap>

    <!-- Consulta para obtener todas las rutas -->
    <select id="getAllRoutes" resultMap="RouteResultMap">
        SELECT * FROM Routes
    </select>

    <!-- Consulta para obtener una ruta por ID -->
    <select id="getRouteById" parameterType="int" resultMap="RouteResultMap">
        SELECT * FROM Routes WHERE id = #{id}
    </select>

    <!-- Consulta para insertar una nueva ruta -->
    <insert id="insertRoute" parameterType="com.solvd.database.model.Route">
        INSERT INTO Routes (id, id_bus, route_order, id_station)
        VALUES (#{id}, #{busId}, #{routeOrder}, #{stationId})
    </insert>

    <!-- Consulta para actualizar una ruta -->
    <update id="updateRoute" parameterType="com.solvd.database.model.Route">
        UPDATE Routes
        SET id_bus = #{busId},
        route_order = #{routeOrder},
        id_station = #{stationId}
        WHERE id = #{id}
    </update>

    <!-- Consulta para eliminar una ruta por ID -->
    <delete id="deleteRoute" parameterType="int">
        DELETE FROM Routes WHERE id = #{id}
    </delete>
</mapper>