<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.company.CarMapper">

    <resultMap id="carResult" type="Car">
        <id property="id" column="car_id"/>
        <result property="licensePlate" column="license_plate"/>
        <result property="model" column="model"/>
        <result property="year" column="year"/>
        <association property="person" javaType="Person">
            <id property="id" column="person_id"/>
            <result property="firstName" column="first_name"/>
            <result property="lastName" column="last_name"/>
        </association>
    </resultMap>

    <select id="getCarById" parameterType="int" resultMap="carResult">
        SELECT c.car_id, c.license_plate, c.model, c.year,
        p.person_id, p.first_name, p.last_name
        FROM cars c
        INNER JOIN persons p ON c.person_id = p.person_id
        WHERE c.car_id = #{id}
    </select>

    <insert id="addCar" parameterType="Car" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO cars(license_plate, model, year, person_id)
        VALUES(#{licensePlate}, #{model}, #{year}, #{person.id})
    </insert>

    <update id="updateCar" parameterType="Car">
        UPDATE cars
        SET license_plate=#{licensePlate},
        model=#{model},
        year=#{year}
        WHERE car_id=#{id}
    </update>

    <delete id="deleteCar" parameterType="int">
        DELETE FROM cars WHERE car_id = #{id}
    </delete>

</mapper>